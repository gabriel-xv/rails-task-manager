<div class="container">
  <h1>List tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <%= link_to(task) do %>
        <li><%= task.title %> -  <%= link_to "Delete",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to 'Create new task', new_task_path %>
</div>
